                <div class="carousel-caption top-50 maintxt">
                    <h1>Dicover offbeat GOA</h1>
                    <p>Package start price as low as INR <b>1499/-</b></p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="text-dark text-center d-md-block mt-5 ml-0 px-5 py-5">
                    <h2 class="mb-3">Enter Your Booking Details</h2>
                    <form action="/tour" method="POST">
                        <div class="input-group mb-3 w-auto">
                            <!-- <span class="input-group-text" id="basic-addon1">@</span> -->
                            <input placeholder="Pick a date" type="date" class="form-control" name="date" required>
                        </div>
                        <div class="input-group mb-3 w-auto">
                            <!-- <input type="select" class="form-control" placeholder="Select tour type"> -->
                            <!-- <span class="input-group-text" id="basic-addon2">@example.com</span> -->
                            <select class="form-select input-group" name="type" required>
                                <option selected>Select tour type</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="input-group mb-3 w-auto">
                            <div class="col-sm-6 mx-auto"><input type="number" class="form-control" placeholder="Adults"
                                    min="0" name="adults" required>
                            </div>
                            <div class="col-sm-6 mx-auto"><input type="number" class="form-control" placeholder="Child"
                                    min="0" name="child" required>
                            </div>
                        </div>
                        <div class="input-group mb-3 w-auto">
                            <!-- <span class="input-group-text">With textarea</span> -->
                            <textarea class="form-control" cols="8" rows="5" placeholder="Special Notes" name="description"></textarea>
                        </div>
                        <button class="btn btn-outline-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <footer>
